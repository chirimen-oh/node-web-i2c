{
  "name": "node-web-i2c",
  "version": "1.1.47",
  "description": "I2C access with Node.js",
  "main": "index.js",
  "files": [
    "index.*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chirimen-oh/node-web-i2c.git"
  },
  "author": "Kohei Watanabe <kou029w@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/i2c-bus": "^5.1.2",
    "@types/node": "^24.10.1",
    "i2c-bus": "^5.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "22.18.13",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "typedoc": "0.28.15",
    "typescript": "5.9.3"
  },
  "scripts": {
    "build": "tsc",
    "lint": "biome check --write --no-errors-on-unmatched",
    "prepare": "husky install && rm -rf dist && npm run build",
    "precommit": "lint-staged",
    "preversion": "npm run docs && git add docs",
    "docs": "npm run remove:docs && npm run typedoc -- --options typedoc.json --exclude '**/*.spec.ts' ./ README.md",
    "typedoc": "typedoc",
    "remove:docs": "rm -rf docs"
  },
  "keywords": [
    "hardware",
    "i2c",
    "iot",
    "linux",
    "pi",
    "raspberry",
    "raspberry pi",
    "raspi",
    "robot",
    "robotics",
    "robots",
    "rpi",
    "smbus"
  ]
}
